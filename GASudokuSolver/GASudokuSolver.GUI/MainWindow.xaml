<Window
    x:Class="GASudokuSolver.GUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GASudokuSolver.GUI"
    xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Genetic Algorithms Sudoku Solver"
    Width="1200"
    Height="800"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="ModernCard" TargetType="Border">
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="BorderBrush" Value="#CCC" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="10" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Background" Value="#FFF" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="8"
                        Opacity="0.2"
                        ShadowDepth="2" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TitleText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Foreground" Value="#333" />
            <Setter Property="Margin" Value="10" />
        </Style>

        <Style x:Key="ModernMenu" TargetType="Menu">
            <Setter Property="Background" Value="#F5F5F5" />
            <Setter Property="Padding" Value="10,2" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
            <Setter Property="BorderBrush" Value="#DDD" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="4"
                        Opacity="0.1"
                        ShadowDepth="1" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernMenuItem" TargetType="MenuItem">
            <Setter Property="Margin" Value="5,0" />
            <Setter Property="Padding" Value="10,4" />
            <Setter Property="Foreground" Value="#333" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="FontWeight" Value="Normal" />
        </Style>
    </Window.Resources>

    <DockPanel>
        <!--  Menu  -->
        <Menu DockPanel.Dock="Top" Style="{StaticResource ModernMenu}">
            <MenuItem Header="_File" Style="{StaticResource ModernMenuItem}">
                <MenuItem Header="_Import Board" Style="{StaticResource ModernMenuItem}" />
                <MenuItem Header="_Export Board" Style="{StaticResource ModernMenuItem}" />
            </MenuItem>
            <MenuItem Header="_Help" Style="{StaticResource ModernMenuItem}">
                <MenuItem Header="_About" Style="{StaticResource ModernMenuItem}" />
                <MenuItem Header="_User Guide" Style="{StaticResource ModernMenuItem}" />
            </MenuItem>
        </Menu>


        <!--  Main Grid  -->
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="450" />
            </Grid.ColumnDefinitions>

            <!--  Title  -->
            <Border
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Style="{StaticResource ModernCard}">
                <TextBlock Style="{StaticResource TitleText}" Text="Genetic Algorithms Sudoku Solver" />
            </Border>


            <!--  Right Panel  -->
            <Grid Grid.Row="1" Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Chart in a Card  -->
                <Border Grid.Row="0" Style="{StaticResource ModernCard}">
                    <lvc:CartesianChart x:Name="GeneticChart" LegendLocation="Right">
                        <lvc:CartesianChart.AxisY>
                            <lvc:Axis Title="Fitness" LabelFormatter="{Binding AxisLabelFormatter}" />
                        </lvc:CartesianChart.AxisY>
                        <lvc:CartesianChart.AxisX>
                            <lvc:Axis Title="Generation" LabelFormatter="{Binding AxisLabelFormatter}" />
                        </lvc:CartesianChart.AxisX>
                    </lvc:CartesianChart>
                </Border>

                <!--  Settings in a Card  -->
                <Border Grid.Row="1" Style="{StaticResource ModernCard}">
                    <TabControl>
                        <TabItem Header="Population">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="Population settings" />
                        </TabItem>
                        <TabItem Header="Representation">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="Representation settings" />
                        </TabItem>
                        <TabItem Header="Fitness Function">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="Fitness function settings" />
                        </TabItem>
                        <TabItem Header="Selection">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="Selection settings" />
                        </TabItem>
                        <TabItem Header="Crossover">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="Crossover settings" />
                        </TabItem>
                        <TabItem Header="Mutation">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Text="Mutation settings" />
                        </TabItem>
                    </TabControl>
                </Border>
            </Grid>


            <!--  Left Panel  -->
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="450" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Sudoku Board  -->
                <Grid Grid.Row="0" Grid.Column="1">
                    <Border Style="{StaticResource ModernCard}">
                        <ItemsControl ItemsSource="{Binding SudokuCells}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="9" Rows="9" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Width="40"
                                        Height="40"
                                        Margin="2"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Background="#FAFAFA"
                                        BorderBrush="#DDD"
                                        BorderThickness="1"
                                        CornerRadius="6">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="16"
                                            FontWeight="SemiBold"
                                            Foreground="#333"
                                            Text="{Binding}" />
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>
                </Grid>
                
                
            </Grid>
        </Grid>
    </DockPanel>
</Window>
