<UserControl
    x:Class="GASudokuSolver.GUI.Controls.MainMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GASudokuSolver.GUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svg="http://sharpvectors.codeplex.com/runtime/"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Menu DockPanel.Dock="Top" Style="{StaticResource ModernMenu}">
        <MenuItem Header="_File" Style="{StaticResource ModernMenuItem}">
            <MenuItem
                Click="SaveBoardCsvClick"
                Header="_Save Board"
                Style="{StaticResource ModernMenuItem}">
                <MenuItem.Icon>
                    <Image Source="/Resources/Icons/save.svg" />
                    <!--<svg:SvgViewbox Width="16" Height="16"
                                Source="/Resources/Icons/save.png" />-->
                </MenuItem.Icon>
                <!--<MenuItem.Icon>
                    <Image Source="/Resources/Icons/export.png" />
                </MenuItem.Icon>-->
            </MenuItem>
            <MenuItem
                Click="LoadBoardCsvClickAsync"
                Header="_Load Board"
                Style="{StaticResource ModernMenuItem}">
                <MenuItem.Icon>
                    <Image Source="/Resources/Icons/import.png" />
                </MenuItem.Icon>
            </MenuItem>
            <Separator />
            <MenuItem
                Click="ExitClick"
                Header="_Exit"
                Style="{StaticResource ModernMenuItem}">
                <MenuItem.Icon>
                    <Image Source="/Resources/Icons/close.png" />
                </MenuItem.Icon>
            </MenuItem>
        </MenuItem>
        <MenuItem Header="_Help" Style="{StaticResource ModernMenuItem}">
            <MenuItem
                Click="AboutClick"
                Header="_About"
                Style="{StaticResource ModernMenuItem}">
                <MenuItem.Icon>
                    <Image Source="/Resources/Icons/info.png" />
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem
                Click="UserGuideClick"
                Header="_User Guide"
                Style="{StaticResource ModernMenuItem}">
                <MenuItem.Icon>
                    <Image Source="/Resources/Icons/question.png" />
                </MenuItem.Icon>
            </MenuItem>
        </MenuItem>
    </Menu>
</UserControl>
