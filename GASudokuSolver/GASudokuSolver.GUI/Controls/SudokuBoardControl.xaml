<UserControl
    x:Class="GASudokuSolver.GUI.Controls.SudokuBoardControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:GASudokuSolver.GUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GASudokuSolver.GUI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Root"
    d:DesignHeight="430"
    d:DesignWidth="430"
    mc:Ignorable="d">
    <Grid>
        <Border Style="{StaticResource ModernCard}">
            <ItemsControl ItemsSource="{Binding Board, ElementName=Root}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="9" Rows="9" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Width="40"
                            Height="40"
                            Margin="1"
                            Background="{Binding ReadOnly, Converter={StaticResource ReadOnlyToBackgroundConverter}}"
                            BorderBrush="#444"
                            BorderThickness="{Binding Converter={StaticResource SudokuBorderConverter}}"
                            CornerRadius="3">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="16"
                                FontWeight="SemiBold"
                                Foreground="#333"
                                Text="{Binding Value}" />
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>
    </Grid>
</UserControl>
